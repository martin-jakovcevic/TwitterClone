<h1>New Tweet</h1>

<% if @tweet.errors.any? %>
<div id="error_explanation">
  <h2>
  <%= pluralize(@tweet.errors.count, "error") %> prohibited this tweet to be created:
  </h2>

  <ul>
    <% @tweet.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_with scope: :tweet, url: '/tweets', local: true do |form| %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </p>

  <p>
    <%= form.submit "Save Tweet" %>
  </p>

  <%= link_to 'Back', root_path %>
<% end %>



