<div class="container">
  <div class="columns is-multiline">
  <% @tweets.each do |tweet| %>
    <div class="column is-4 is-offset-4">
      <div class="card">
        <header class="card-header">
          <p class="card-header-title">
            <%= tweet.title %>
          </P>
          
        </header>
        <div class="card-content">
          <div class="content">
            <%= tweet.body %>
          </div>
        </div>
        <footer class="card-footer">
          <%= link_to "Show", tweet_path(tweet),class: "card-footer-item" %>

          <%= link_to "Edit", edit_tweet_path(tweet), class: "card-footer-item" %>
          <%= link_to "Delete",tweet_path(tweet),class: "card-footer-item", method: :delete, data: { confirm: "Are you sure you want to delete this tweet ? " } %>

        </footer>
      </div>
    </div>
  <% end %>
  </div>
</div>
